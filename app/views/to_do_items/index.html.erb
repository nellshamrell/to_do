<h1>Listing to_do_items</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Description</th>
      <th>Done</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @to_do_items.each do |to_do_item| %>
      <tr>
        <td><%= to_do_item.project %></td>
        <td><%= to_do_item.description %></td>
        <td><%= to_do_item.done %></td>
        <td><%= link_to 'Show', to_do_item %></td>
        <td><%= link_to 'Edit', edit_to_do_item_path(to_do_item) %></td>
        <td><%= link_to 'Destroy', to_do_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

